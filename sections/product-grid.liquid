<!-- sections/product-grid.liquid -->
<section style="padding: 4rem 0; background: #fff;">
  <div class="container">
    <h3 style="font-size: 2rem; margin-bottom: 2rem;">{{ section.settings.heading }}</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 2rem;">
      {% for product in collections[section.settings.collection].products %}
        <div style="border: 1px solid #ffe6f0; border-radius: 12px; overflow: hidden; padding: 1rem;">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" style="width: 100%; border-radius: 8px;">
            <h4 style="margin-top: 0.75rem;">{{ product.title }}</h4>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Best Sellers" },
    { "type": "collection", "id": "collection", "label": "Product Collection" }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}
