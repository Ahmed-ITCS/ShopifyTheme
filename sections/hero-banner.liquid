<!-- sections/hero-banner.liquid -->
<section style="background: linear-gradient(to right, #ffe6f0, #fffafc); padding: 4rem 0; text-align: center;">
  <div class="container">
    <h2 style="font-size: 2.5rem; margin-bottom: 1rem;">{{ section.settings.heading }}</h2>
    <p style="font-size: 1.2rem; max-width: 600px; margin: auto;">{{ section.settings.subtext }}</p>
    <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Train With Style & Strength" },
    { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Discover our exclusive collection of gymwear designed for confident women like you." },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Explore Collection" },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all" }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
