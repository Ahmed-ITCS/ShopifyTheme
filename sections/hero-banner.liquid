<!-- sections/hero-banner.liquid -->
<div class="container" style="text-align:center; padding: 4rem 0;">
  <h2 style="font-size: 2.5rem; margin-bottom: 1rem;">{{ section.settings.heading }}</h2>
  <p style="margin-bottom: 2rem;">{{ section.settings.subtext }}</p>
  <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Empower Your Workout"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover gymwear designed for strength, style, and confidence."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
